{
  "name": "DetoxSample",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build-android": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "test-android": "npx cucumber-js e2e/features -- platform=android"
  },
  "dependencies": {
    "react": "16.8.3",
    "react-native": "0.62.3"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/runtime": "^7.5.4",
    "babel-jest": "^24.8.0",
    "cucumber": "^5.1.0",
    "detox": "^13.1.0",
    "jest": "^24.8.0",
    "metro-react-native-babel-preset": "^0.55.0",
    "react-test-renderer": "16.8.3"
  },
  "jest": {
    "preset": "react-native"
  },
  "detox": {
    "androidConfig": {
      "configurations": {
        "android": {
          "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
          "name": "Nexus6_Oreo",
          "type": "android.emulator"
        }
      }
    },
    "iosConfig": {
      "configurations": {
        "ios": {
          "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/SampleApp.app",
          "type": "ios.simulator",
          "name": "iPhone X"
        }
      }
    }
  }
}
